<core:FragmentDefinition id="idFragment" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog id="idDialog" title="Balanço de Excedentes" icon="sap-icon://waiver" busyIndicatorDelay="0" busy="false" stretch="true">
		<content>
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor sem destinar Desconto" class="bold"/>
					<Input id="idAbaterNaoDestinadoDesconto" value="R$ {ItemAprovar>/Valtotexcndirdesc}" valueState="Warning" enabled="false"
						class="desabilitado"/>
					<Label text="Valor sem destinar Prazo Médio" class="bold"/>
					<Input id="idAbaterNaoDestinadoPrazoMed" value="R$ {ItemAprovar>/Valtotexcndirprazo}" valueState="Warning" enabled="false"
						class="desabilitado"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente desconto" class="bold" busyIndicatorSize="Large"/>
					<Input id="idExcedenteDesconto" value="R$: {ItemAprovar>/Vlrdsc}" class="desabilitado marginBottomInpu" enabled="false"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaDesconto" value="{ItemAprovar>/Vlrdscvm}" type="Number" liveChange="onValidaVerbaUtilizadaDesconto"
						enabled="true"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaDesconto" value="{ItemAprovar>/Vlrdsccom}" type="Number" liveChange="onValidaComissaoUtilizadaDesconto"
						enabled="true"/>
					<Label text="Verba D + D (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaDesconto" value="{ItemAprovar>/Vlrdscdd}" type="Number" liveChange="onValidaVerbaUtilizadaDesconto"
						enabled="true"/>
					<Label text="Comissão (R$)"/>
					<Input id="idVerbaVBUtilizadaDesconto" value="{ItemAprovar>/Vlrdscvvb}" type="Number" liveChange="onValidaComissaoUtilizadaDesconto"
						enabled="true"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente prazo médio" class="bold"/>
					<Input id="idExcedentePrazo" value="R$: {ItemAprovar>/Vlrprz}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing"/>
					<Input id="idVerbaPrazo" enabled="true" type="Number" value="{ItemAprovar>/Vlrprzvm}"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzcom}" enabled="true"/>
					<Label text="Verba D + D (R$)"/>
					<Input id="idVerbaDiaDiaUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzdd}" enabled="true"/>
					<Label text="Verba VB (R$)"/>
					<Input id="idVerbaVBUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzvvb}" enabled="true"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente brinde" class="bold"/>
					<Input id="idExcedenteBrinde" value="R$: {ItemAprovar>/Vlrbri}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBrinde" value="{ItemAprovar>/Vlrbrivm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBrinde" value="{ItemAprovar>/Vlrbricom}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
					<Label text="Verba D + D (R$)"/>
					<Input id="idVerbaDiaDiaUtilizadaBrinde" value="{ItemAprovar>/Vlrbridd}" enabled="true" type="Number" />
					<Label text="Verba VB (R$)"/>
					<Input id="idVerbaVBUtilizadaBrinde" value="{ItemAprovar>/Vlrbrivvb}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente amostra" class="bold"/>
					<Input id="idExcedenteAmostra" value="R$: {ItemAprovar>/Vlramo}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaAmostra" value="{ItemAprovar>/Vlramovm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaAmostra" value="{ItemAprovar>/Vlramocom}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
					<Label text="Verba D + D (R$)"/>
					<Input id="idVerbaDiaDiaUtilizadaAmostra" value="{ItemAprovar>/Vlramodd}" enabled="true" type="Number" />
					<Label text="Verba VB (R$)"/>
					<Input id="idVerbaVBUtilizadaAmostra" value="{ItemAprovar>/Vlramovvb}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente bonificação" class="bold"/>
					<Input id="idExcedenteBonif" value="R$: {ItemAprovar>/Vlrbon}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBonif" value="{ItemAprovar>/Vlrbrivm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBonif" value="{ItemAprovar>/Vlrboncom}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
					<Label text="Verba D + D (R$)"/>
					<Input id="idVerbaDiaDiaUtilizadaBonif" value="{ItemAprovar>/Vlrbondd}" enabled="true" type="Number" />
					<Label text="Verba VB (R$)"/>
					<Input id="idVerbaVBUtilizadaBonf" value="{ItemAprovar>/Vlrbrivvb}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button id="idButtonSalvarDialog" text="Salvar" press="onAprovar"/>
		</beginButton>
		<endButton>
			<Button text="Cancelar" press="onCancelar"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>