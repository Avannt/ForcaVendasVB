<core:FragmentDefinition id="idFragment" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog id="idDialog" title="Balanço de Excedentes" icon="sap-icon://waiver" busyIndicatorDelay="0" busy="false" stretch="true">
		<content>
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor total Excedido (R$)" class="bold"/>
					<Input id="idTotalExcedido" value="{path: 'ItemAprovar>/Vlrexc'}" valueState="Error" type="Number" enabled="false" class="desabilitado"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente desconto (R$)" class="bold" busyIndicatorSize="Large"/>
					<Input id="idExcedenteDesconto" value="{path: 'ItemAprovar>/Vlrdsc'}" class="desabilitado2" type="Number"  enabled="false"/>
					<!--}-->
					<Label text="Valor sem destinar Desconto (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoDesconto" value="{path: 'ItemAprovar>/Valtotexcndirdesc'}"  type="Number" valueState="Warning" enabled="false" class="desabilitado" />
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaDesconto" value="{path: 'ItemAprovar>/Vlrdscvm'}" type="Number" enabled="true" change="onDestinaDesc" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaDesconto" value="{path: 'ItemAprovar>/Vlrdsccom'}" type="Number" enabled="true" change="onDestinaDesc" />
					<Label id="idLabelVerbaDiaDiaUtilizadaDesconto" text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaDesconto" value="{path: 'ItemAprovar>/Vlrdscdd'}" type="Number" enabled="true" change="onDestinaDesc" />
					<Label id="idLabelVerbaVBUtilizadaDesconto" text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaDesconto" value="{path: 'ItemAprovar>/Vlrdscvvb'}" type="Number" enabled="true" change="onDestinaDesc" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente prazo médio (R$)" class="bold"/>
					<Input id="idExcedentePrazo" value="{path: 'ItemAprovar>/Vlrprz'}" enabled="false" type="Number" class="desabilitado2"/>
					<Label text="Valor sem destinar Prazo Médio (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoPrazoMed" value="{path: 'ItemAprovar>/Valtotexcndirprazo'}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaPrazo" type="Number" value="{path: 'ItemAprovar>/Vlrprzvm'}" enabled="true" change="onDestinaPrazo"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaPrazo" type="Number" value="{path: 'ItemAprovar>/Vlrprzcom'}" enabled="true" change="onDestinaPrazo"/>
					<Label id="idLabelVerbaDiaDiaUtilizadaPrazo" text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaPrazo" type="Number" value="{path: 'ItemAprovar>/Vlrprzdd'}" enabled="true" change="onDestinaPrazo"/>
					<Label id="idLabelVerbaVBUtilizadaPrazo" text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaPrazo" type="Number" value="{path: 'ItemAprovar>/Vlrprzvvb'}" enabled="true" change="onDestinaPrazo"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente brinde (R$)" class="bold"/>
					<Input id="idExcedenteBrinde" value="{path: 'ItemAprovar>/Vlrbri'}" enabled="false" type="Number" class="desabilitado2 bold"/>
					<Label text="Valor sem destinar Brinde (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoBrinde" value="{path: 'ItemAprovar>/ValtotexcndirBrinde'}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBrinde" value="{path: 'ItemAprovar>/Vlrbrivm'}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBrinde" value="{path: 'ItemAprovar>/Vlrbricom'}" enabled="true" />
					<Label id="idLabelVerbaDiaDiaUtilizadaBrinde" text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaBrinde" value="{path: 'ItemAprovar>/Vlrbridd'}" enabled="true" type="Number" />
					<Label id="idLabelVerbaVBUtilizadaBrinde" text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaBrinde" value="{path: 'ItemAprovar>/Vlrbrivvb'}" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente amostra (R$)" class="bold"/>
					<Input id="idExcedenteAmostra" value="{path: 'ItemAprovar>/Vlramo'}" enabled="false" type="Number" class="desabilitado2"/>
					<Label text="Valor sem destinar Amostra (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoAmostra" value="{path: 'ItemAprovar>/ValtotexcndirAmostra'}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaAmostra" value="{path: 'ItemAprovar>/Vlramovm'}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaAmostra" value="{path: 'ItemAprovar>/Vlramocom'}" enabled="true" type="Number" />
					<Label id="idLabelVerbaDiaDiaUtilizadaAmostra" text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaAmostra" value="{path: 'ItemAprovar>/Vlramodd'}" enabled="true" type="Number" />
					<Label id="idLabelVerbaVBUtilizadaAmostra" text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaAmostra" value="{path: 'ItemAprovar>/Vlramovvb'}" enabled="true" type="Number" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente bonificação (R$)" class="bold"/>
					<Input id="idExcedenteBonif" value="{path: 'ItemAprovar>/Vlrbon'}" enabled="false" type="Number" class="desabilitado2"/>
					<Label text="Valor sem destinar Bonificação (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoBonif" value="{path: 'ItemAprovar>/ValtotexcndirBonif'}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBonif" value="{path: 'ItemAprovar>/Vlrbonvm'}" change="onDestinaBonif" enabled="true" type="Number" />
					<Label id="idLabelComissaoUtilizadaBonif" text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBonif" value="{path: 'ItemAprovar>/Vlrboncom'}" change="onDestinaBonif" enabled="true" type="Number" />
					<Label id="idLabelVerbaDiaDiaUtilizadaBonif" text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaBonif" value="{path: 'ItemAprovar>/Vlrbondd'}" change="onDestinaBonif" enabled="true"  />
					<Label id="idLabelVerbaVBUtilizadaBonf" text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaBonf" value="{path: 'ItemAprovar>/Vlrbonvvb'}" change="onDestinaBonif" enabled="true" type="Number" />
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button icon="sap-icon://accept" id="idButtonSalvarDialog" text="Salvar" press="onAprovar"/>
		</beginButton>
		<endButton>
			<Button icon="sap-icon://decline" text="Cancelar" press="onCancelar"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>