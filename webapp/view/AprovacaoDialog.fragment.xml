<core:FragmentDefinition id="idFragment" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog id="idDialog" title="Balanço de Excedentes" icon="sap-icon://waiver" busyIndicatorDelay="0" busy="false" stretch="true">
		<content>
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor total Excedido (R$)" class="bold"/>
					<Input id="idTotalExcedido" value="{ItemAprovar>/Vlrexc}" valueState="Error" type="Number" enabled="false" class="desabilitado"/>
					<Label text="Valor sem destinar Desconto (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoDesconto" value="{ItemAprovar>/Valtotexcndirdesc}"  type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Valor sem destinar Prazo Médio (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoPrazoMed" value="{ItemAprovar>/Valtotexcndirprazo}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Valor sem destinar Brinde (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoBrinde" value="{ItemAprovar>/ValtotexcndirBrinde}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Valor sem destinar Amostra (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoAmostra" value="{ItemAprovar>/ValtotexcndirAmostra}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
					<Label text="Valor sem destinar Bonificação (R$)" class="bold"/>
					<Input id="idAbaterNaoDestinadoBonif" value="{ItemAprovar>/ValtotexcndirBonif}" type="Number" valueState="Warning" enabled="false" class="desabilitado"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente desconto (R$)" class="bold" busyIndicatorSize="Large"/>
					<Input id="idExcedenteDesconto" value="{ItemAprovar>/Vlrdsc}" class="desabilitado" enabled="false"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaDesconto" value="{ItemAprovar>/Vlrdscvm}" type="Number" enabled="true" change="onDestinaDesc"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaDesconto" value="{ItemAprovar>/Vlrdsccom}" type="Number" enabled="true" change="onDestinaDesc"/>
					<Label text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaDesconto" value="{ItemAprovar>/Vlrdscdd}" type="Number" enabled="true" change="onDestinaDesc"/>
					<Label text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaDesconto" value="{ItemAprovar>/Vlrdscvvb}" type="Number" enabled="true" change="onDestinaDesc"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente prazo médio (R$)" class="bold"/>
					<Input id="idExcedentePrazo" value="{ItemAprovar>/Vlrprz}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzvm}" enabled="true" change="onDestinaPrazo"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzcom}" enabled="true" change="onDestinaPrazo"/>
					<Label text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzdd}" enabled="true" change="onDestinaPrazo"/>
					<Label text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaPrazo" type="Number" value="{ItemAprovar>/Vlrprzvvb}" enabled="true" change="onDestinaPrazo"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente brinde (R$)" class="bold"/>
					<Input id="idExcedenteBrinde" value="{ItemAprovar>/Vlrbri}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBrinde" value="{ItemAprovar>/Vlrbrivm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBrinde" value="{ItemAprovar>/Vlrbricom}" enabled="true" />
					<Label text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaBrinde" value="{ItemAprovar>/Vlrbridd}" enabled="true" type="Number" />
					<Label text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaBrinde" value="{ItemAprovar>/Vlrbrivvb}" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente amostra (R$)" class="bold"/>
					<Input id="idExcedenteAmostra" value="{ItemAprovar>/Vlramo}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaAmostra" value="{ItemAprovar>/Vlramovm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaAmostra" value="{ItemAprovar>/Vlramocom}" enabled="true" type="Number" />
					<Label text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaAmostra" value="{ItemAprovar>/Vlramodd}" enabled="true" type="Number" />
					<Label text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaAmostra" value="{ItemAprovar>/Vlramovvb}" enabled="true" type="Number" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente bonificação (R$)" class="bold"/>
					<Input id="idExcedenteBonif" value="{ItemAprovar>/Vlrbon}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBonif" value="{ItemAprovar>/Vlrbonvm}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBonif" value="{ItemAprovar>/Vlrboncom}" enabled="true" type="Number" />
					<Label text="Verba VB (R$)" />
					<Input id="idVerbaDiaDiaUtilizadaBonif" value="{ItemAprovar>/Vlrbondd}" enabled="true" type="Number" />
					<Label text="Verba Institucional (R$)"/>
					<Input id="idVerbaVBUtilizadaBonf" value="{ItemAprovar>/Vlrbonvvb}" enabled="true" type="Number" />
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button id="idButtonSalvarDialog" text="Salvar" press="onAprovar"/>
		</beginButton>
		<endButton>
			<Button text="Cancelar" press="onCancelar"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>