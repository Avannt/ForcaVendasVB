<core:FragmentDefinition id="idFragment" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog id="idDialog" title="Balanço de Excedentes" icon="sap-icon://waiver" busyIndicatorDelay="0" busy="false" stretch="true">
		<content>
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor sem destinar Desconto" class="bold"/>
					<Input id="idAbaterNaoDestinadoDesconto" value="R$ {ItemAprovar>/Valtotexcndirdesc}" valueState="Warning" enabled="false"
						class="desabilitado"/>
					<Label text="Valor sem destinar Prazo Médio" class="bold"/>
					<Input id="idAbaterNaoDestinadoPrazoMed" value="R$ {ItemAprovar>/Valtotexcndirprazo}" valueState="Warning" enabled="false"
						class="desabilitado"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente desconto" class="bold" busyIndicatorSize="Large"/>
					<Input id="idExcedenteDesconto" value="R$: {ItemAprovar>/Valtotexcdesc}" class="desabilitado marginBottomInpu" enabled="false"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaDesconto" value="{ItemAprovar>/Valverbautdesc}" type="Number" liveChange="onValidaVerbaUtilizadaDesconto"
						enabled="true"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaDesconto" value="{ItemAprovar>/Valcomutdesc}" type="Number" liveChange="onValidaComissaoUtilizadaDesconto"
						enabled="true"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente prazo médio" class="bold"/>
					<Input id="idExcedentePrazo" value="R$: {ItemAprovar>/Valtotexcprazo}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing"/>
					<Input id="idVerbaPrazo" enabled="true" type="Number" value="{ItemAprovar>/Valcomutprazo}"/>
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaPrazo" type="Number" value="{ItemAprovar>/Valcomutprazo}" enabled="true"/>
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente brinde" class="bold"/>
					<Input id="idExcedenteBrinde" value="R$: {modelDadosPedido>/ValTotalExcedenteBrinde}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBrinde" value="{modelDadosPedido>/ValUtilizadoVerbaBrinde}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBrinde" value="{modelDadosPedido>/ValUtilizadoComissaoBrinde}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente amostra" class="bold"/>
					<Input id="idExcedenteAmostra" value="R$: {modelDadosPedido>/ValTotalExcedenteAmostra}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaAmostra" value="{modelDadosPedido>/ValUtilizadoVerbaAmostra}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaAmostra" value="{modelDadosPedido>/Vlramocom}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
			
			<form:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
				emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2">
				<form:content>
					<Label text="Valor excedente bonificação" class="bold"/>
					<Input id="idExcedenteBonif" value="R$: {modelDadosPedido>/ValTotalExcedenteBonif}" enabled="false" class="desabilitado"/>
					<Label text="Verba de Marketing (R$)"/>
					<Input id="idVerbaUtilizadaBonif" value="{modelDadosPedido>/ValUtilizadoVerbaBonif}" enabled="true" type="Number" />
					<Label text="Comissão (R$)"/>
					<Input id="idComissaoUtilizadaBonif" value="{modelDadosPedido>/ValUtilizadoComissaoBonif}" liveChange="onValidaComissaoUtilizadaPrazoMedio" enabled="true" />
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button id="idButtonSalvarDialog" text="Salvar" press="onAprovar"/>
		</beginButton>
		<endButton>
			<Button text="Cancelar" press="onCancelar"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>