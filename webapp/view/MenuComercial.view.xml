<mvc:View height="100%" controllerName="testeui5.controller.MenuComercial" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page class="backgroundAzul" id="page" title="Comercial" showNavButton="true" navButtonPress="onNavBack" showHeader="true"
		enableScrolling="false">
		<TileContainer id="container" tileDelete="handleTileDelete" tiles="{menu>/Comercial}">
			<StandardTile icon="sap-icon://{menu>icon}" type="{menu>type}" number="{menu>number}" numberUnit="{menu>numberUnit}" title="{menu>title}"
				info="{menu>info}" infoState="{menu>infoState}" app:opcao="{menu>id}" press="onTile"/>
		</TileContainer>
		<footer>
			<Bar>
				<contentLeft>
					<Text id="idAtualizacao" text="Atualização: {modelAux>/DataAtualizacao}" class="sapUiMediumMarginBegin"/>
					<!--{modelAux>/dataUltimoUpdate}-->
				</contentLeft>
				<contentRight>
					<Label text="Versão App: {modelAux>/VersaoApp}" class="sapUiMediumMarginEnd"></Label>
					<!--<Label text="{modelAux>/nomeEmpresa}"/>-->
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>