<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="testeui5.controller.consultaVerba"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Consulta de verbas" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<Table id="tVerbas" growing="true" growingScrollToLoad="true"
				noDataText="Sem informações" updateFinished="onUpdateFinished" width="100%" selectionChange="onSelectionChange"
				items="{ path: 'verbas>/'}">
				<columns>
					<Column minScreenWidth="320px" hAlign="Left" width="70px" demandPopin="false">
						<Text text="Código"/>
					</Column>
					<Column minScreenWidth="500px" demandPopin="true" hAlign="Left">
						<Text text="Nome"/>
					</Column>
					<Column hAlign="Left" demandPopin="false" minScreenWidth="600px">
						<Text text="Verba"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<Text text="{verbas>kunnr}"/>
							<Text text="{verbas>name1}"/>
							<Text text="{verbas>stras}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>