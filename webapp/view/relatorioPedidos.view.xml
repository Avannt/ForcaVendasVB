<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="testeui5.controller.relatorioPedidos"
	xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic">
	<Page id="master" navButtonPress="onNavBack" showNavButton="true" title="Relatório de Pedidos">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<ToolbarSpacer/>
				<!--<Button icon="sap-icon://download" press="onDataExport"/>-->
				<DatePicker visible="false" id="DP6" valueFormat="dd/MM/yyyy" placeholder="Digite Data .." displayFormat="long" change="handleChange" width="50%"/>
				<SearchField class="camposDialog" id="idClientesRelatorio" placeholder="Digite cód/ Nome .." enableSuggestions="true" search="onItemChange"
					suggest="_handleValueHelpSearch" width="100%"
					suggestionItems="{ path: 'cliRelatorio>/', sorter: { path: 'CodCliente' }, parameters: {operationMode: 'Client'}}">
					<suggestionItems>
						<SuggestionItem text="{cliRelatorio>CodCliente}" description="{cliRelatorio>NomeEmit}" key="{cliRelatorio>CodCliente}"/>
					</suggestionItems>
				</SearchField>
			</Toolbar>
		</subHeader>
		<semantic:FullscreenPage id="page">
			<semantic:content>
				<Table id="table_relatorio_pedidos" busyIndicatorDelay="2000" growing="true" growingThreshold="5" growingScrollToLoad="false"
						noDataText="Nenhum pedido encontrado" updateFinished="onUpdateFinished" width="100%" selectionChange="onSelectionChange999"
					items="{ path: 'pedidoRelatorio>/', sorter: { path: 'NrPedCliDTS', descending: true}}">
					<columns>
						<Column minScreenWidth="320px" demandPopin="false" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="N°Ped"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline">
							<Text text="Valor total"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline">
							<Text text="Valor excedente"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="Cód.Cliente"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="Cliente"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="Cód.Aprovador"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="Aprovador"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline" hAlign="Left" width="100px">
							<Text text="Status"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" hAlign="Left" width="70px" >
							<Text text="Data"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem press="onSelectionChange999" type="Navigation">
							<cells>
								<Text text="{path : 'pedidoRelatorio>Nrpedcli'}" />
								<Text text="R$: {path :'pedidoRelatorio>Valtotpedido', formatter: '.fValMonetario'}"/>
								<Text text="R$: {path :'pedidoRelatorio>Vlrexc', formatter: '.fValMonetario'}"/>
								<Text text="{path : 'pedidoRelatorio>Kunnr'}"/>
								<Text text="{path : 'pedidoRelatorio>NameOrg1'}" />
								<Text text="{path : 'pedidoRelatorio>Aprov'}"/>
								<Text text="{path : 'pedidoRelatorio>AprovNome'}"/>
								<Image src="{path : 'pedidoRelatorio>pathImg'}" 
									width="18%"
									tooltip="{path : 'pedidoRelatorio>AprovadoDesc'}"/>
								<Text text="{path : 'pedidoRelatorio>Erdat', type: 'sap.ui.model.type.Date'}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</semantic:content>
		</semantic:FullscreenPage>
	</Page>
</mvc:View>