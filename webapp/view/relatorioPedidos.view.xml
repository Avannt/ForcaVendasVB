						<!--	</Column>-->
						<!--	<Column hAlign="Center" demandPopin="true" minScreenWidth="770px">-->
						<!--		<Text text="Data"/>-->
						<!--	</Column>-->
						<!--	<Column hAlign="Center" demandPopin="true" minScreenWidth="640px">-->
						<!--		<Text text="Cod. Cliente"/>-->
						<!--	</Column>-->
						<!--	<Column demandPopin="true" minScreenWidth="1000px" hAlign="Left">-->
						<!--		<Text text="Nome Cliente"/>-->
						<!--	</Column>-->
						<!--	<Column hAlign="Center" minScreenWidth="320px" demandPopin="true">-->
						<!--		<Text text="Valor Total"/>-->
						<!--	</Column>-->
						<!--	<Column demandPopin="true" minScreenWidth="500px" hAlign="Left">-->
						<!--		<Text text="Status"/>-->
						<!--	</Column>-->
						<!--	<Column demandPopin="true" minScreenWidth="1000px" hAlign="Left">-->
						<!--		<Text text="Emp."/>-->
						<!--	</Column>-->
						<!---->
						<Column minScreenWidth="320px" demandPopin="false" hAlign="Left" width="100px">
							<Text text="N°Ped"/>
						</Column>
						<Column minScreenWidth="1000px" hAlign="Left" popinDisplay="Inline" demandPopin="true">
							<Text text="Emp."/>
						</Column>
						<Column minScreenWidth="320px" hAlign="Left" width="70px">
							<Text text="Data"/>
						</Column>
						<Column minScreenWidth="385px" demandPopin="true" popinDisplay="Inline">
							<Text text="Valor total"/>
						</Column>
						<Column minScreenWidth="700px" demandPopin="true" popinDisplay="Inline">
							<Text text="Valor líquido"/>
						</Column>
						<Column minScreenWidth="600px" demandPopin="true" popinDisplay="Inline">
							<Text text="Valor verba"/>
						</Column>
						<Column minScreenWidth="505px" demandPopin="true" popinDisplay="Inline">
							<Text text="Rentab."/>
						</Column>
						<Column minScreenWidth="505px" demandPopin="true" popinDisplay="Inline">
							<Text text="Semáf."/>
						</Column>
						<Column minScreenWidth="320px" hAlign="Center" width="70px">
							<Text text="Status"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem press="onSelectionChange" type="Navigation">
							<cells>
								<!--<ObjectIdentifier text="{pedidoRelatorio>NrPedCliDTS}" hAlign="Left"/>-->
								<!--<Text text="{path : 'pedidoRelatorio>DatImpl', formatter:'.myFormatterDataImp'}" hAlign="Left"/>-->
								<!--<Text text="{pedidoRelatorio>CodCliente}"/>-->
