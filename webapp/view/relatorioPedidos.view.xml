								<Text text="{path : 'pedidoRelatorio>NrPedCliDTS'}" hAlign="Left"/>
								<Text text="{path : 'pedidoRelatorio>CodEmpresa', formatter:'.myFormatterCodEmpresa'}" hAlign="Left"/>
								<Text text="{path : 'pedidoRelatorio>DatImpl'}"/>
								<Text text="R$: {path :'pedidoRelatorio>ValTotPed'}"/>
