								<Text text="R$: {path :'pedidoRelatorio>ValVerbaPedido'}"/>
								<Text text="{path: 'pedidoRelatorio>PercLucro', formatter: '.formatRentabilidade'} %" hAlign="Left" visible="false"/>
								<Image src="{path : 'pedidoRelatorio>rentabilidadeTotalImg'}" width="20%" backgroundSize="20%" backgroundPosition="Center"/>
