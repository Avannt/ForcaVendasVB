<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="testeui5.controller.entregaFutura"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<SplitContainer id="SplitContDemo2" initialDetail="detail" initialMaster="master" mode="ShowHideMode">
		<detailPages>
			<Page id="detail" title="Entrega futura" showNavButton="{device>/system/phone}" navButtonPress="onNavBack2" class="sapUiStdPage">
				<content>
					<ObjectHeader id="objectHeader" title="Nenhum cliente selecionado">
						<statuses>
							<ObjectStatus id="objectStatus_cidade"/>
						</statuses>
						<attributes>
							<ObjectAttribute id="objectAttribute_cnpj"/>
						</attributes>
					</ObjectHeader>

					<Button id="btnPesquisaPedido" class="sapUiSmallMarginBottom" text="Procurar pedido" press="onSelectDialogPress" width="100%">
						<customData>
							<core:CustomData key="multi" value="false"/>
							<core:CustomData key="remember" value="true"/>
							<core:CustomData key="growing" value="false"/>
						</customData>
					</Button>
					
					<Label text="Nro Documento" labelFor="ifVbeln"/>
					<Input
						id="ifVbeln"
						width="100%" 
						type="Number"
						class="sapUiSmallMarginBottom"
						enabled="true"
						editable="false"
						placeholder="Informe o documento ..." />
					
					<Label text="Material" labelFor="sfItem"/>
					<SearchField id="sfItem" 
									width="100%" 
									placeholder="Pesquisar item..." 
									enableSuggestions="true" 
									search="sfItemSearch" 
									suggest="sfItemSuggest"
									suggestionItems="{ path: 'ItensEF>/' }">
						<suggestionItems>
							<SuggestionItem text="{ItensEF>Matnr}" description="{ItensEF>Arktx} " key="{ItensEF>Matnr}"/>
						</suggestionItems>
					</SearchField>
					
					<Label text="Quantidade" labelFor="ifQtde"/>
					<Input
						id="ifQtde"
						width="100%" 
						type="Number"
						class="sapUiSmallMarginBottom"
						placeholder="Informe a quantidade ..." />
						
					<Button id="btnInserirItem" 
					class="sapUiSmallMarginBottom" 
					text="Inserir Item" 
					press="onInserirItemPress" 
					width="100%" />
						
				</content>
				<content>
					<Table id="tEntregas" 
						width="100%" 
						backgroundDesign="Translucent"
						items="{ path:'pedidosCadastrados>/', sorter: { path: 'NrPedCli', descending: true}}" 
						mode="Delete" 
						growingThreshold="3" 
						growingTriggerText="Proximos Itens >>" 
						growing="true"
						noDataText="Nenhum item de entrega inserido ..." 
						busyIndicatorDelay="0" 
						fixedLayout="false"
						itemPress="onItemPress" 
						delete="onExcluirItem"
						>
						<headerToolbar>
							<Toolbar id="lineItemsToolbar">
								<Title id="lineItemsHeader" text="Itens para entregar"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="320px" demandPopin="false" hAlign="Left" width="150px">
								<Text text="N°Ped"/>
							</Column>
							<Column minScreenWidth="320px" hAlign="Left" width="70px" popinDisplay="Inline">
								<Text text="Data"/>
							</Column>
							<Column minScreenWidth="550px" demandPopin="true" popinDisplay="Inline">
								<Text text="Valor total"/>
							</Column>
							<Column minScreenWidth="550px" demandPopin="true" popinDisplay="Inline">
								<Text text="Valor líq."/>
							</Column>
							<Column minScreenWidth="320px" hAlign="Center" width="70px" popinDisplay="Inline">
								<Text text="Status"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active">
								<cells>
									<Text text="{path : 'pedidosCadastrados>nrEntCli'}"/>
									<Text text="{path : 'pedidosCadastrados>dataImpl'}"/>
									<Text text="R$: {path : 'pedidosCadastrados>valTotPed'}"/>
									<Text text="R$: {path : 'pedidosCadastrados>valLiqPed'}"/>
									<Text text="{path :'pedidosCadastrados>statusPedido'}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="Clientes" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true" navButtonPress="onNavBack">
				<headerContent/>
				<subHeader>
					<Toolbar id="searchBar">
						<SearchField id="searchField" showRefreshButton="false" placeholder="Pesquisar Nome/Cod" tooltip="Pesquisar Clientes pelo Nome" width="100%"
							liveChange="onSearch" search="onSearch"/>
					</Toolbar>
				</subHeader>
				<content>
					<List id="listClientes" items="{ path: 'clientesCadastrados>/' }" busyIndicatorDelay="0" noDataText="Nenhum Cliente Encontrado!"
						mode="SingleSelectMaster" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
						<items>
							<ObjectListItem id="ObjListCliente" type="Active" press="onSelectionChange" title="{clientesCadastrados>name1}"
								number="{clientesCadastrados>kunnr}" intro="CPF: {clientesCadastrados>stcd1}"></ObjectListItem>
						</items>
					</List>
				</content>
			</Page>
		</masterPages>
	</SplitContainer>
</mvc:View>